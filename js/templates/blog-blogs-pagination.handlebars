{{#pagination currentPage pageCount size api}}
<nav aria-label="Page navigation">
    <ul class="pagination">

        {{#unless startFromFirstPage}}
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous" onclick="loadBlogs('{{api}}',1 )">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        {{/unless}}

        {{#each pages}}
        {{#if isCurrent}}
        <li class="page-item active">
            <a class="page-link" href="#" onclick="loadBlogs('{{api}}',{{page}} )">{{page}}</a>
        </li>
        {{else}}
        <li class="page-item">
            <a class="page-link" href="#" onclick="loadBlogs('{{api}}',{{page}} )">{{page}}</a>
        </li>
        {{/if}}
        {{/each}}

        {{#unless endAtLastPage}}
        <li class="page-item">
            <a class="page-link" href="#" aria-label="Next" onclick="loadBlogs('{{api}}',{{pageCount}} )">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
        {{/unless}}
    </ul>
</nav>
{{/pagination}}