{{#each data}}
<div class="blog py-3">
    <h4>{{name}}</h4>
    <div>by {{author}} in <a href="#" onclick="loadBlogs('blogs/categories/{{categoryId}}')">Blog. {{category.name}}</a>
        on {{date}} Hits: 210 <a href="#">Comments ({{comments.length}})</a></div>
    <div class="py-3">
        <img src="{{thumbpath}}" alt="" class="round-img pull-left img-thumbnail"> {{{description}}}
    </div>
</div>

<div class="py-3 frm-comment">
    <h4 class="text-dark">Leave your comment</h4>
    <h4 class="text-dark">Post comment as a guest</h4>
    <form id="form-comment" method="POST" onsubmit="return addComment()" data-blog-id="{{id}}">
        <div class="row">
            <div class="form-group col">
                <label for="name">Name (required)</label>
                <input type="text" name="name" id="name" class="form-control form-control-sm" placeholder="" required />
            </div>
            <div class="form-group col">
                <label for="email">Email (required)</label>
                <input type="email" name="email" id="email" class="form-control form-control-sm" placeholder=""
                    required />
            </div>
            <div class="col"></div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label for="comment"></label>
                <textarea type="text" name="comment" id="comment" class="form-control form-control-sm" placeholder=""
                    required row="3"></textarea>
            </div>
        </div>
        <div class="row m-0">
            <div class="form-check form-check-inline col">
                <label class="form-check-label">
                    <input class="form-check-input" type="checkbox" name="agree" id="agree" required /> Agree to Terms
                    and Conditions
                </label>
            </div>
            <div class="col text-right">
                <button type="submit" class="btn btn-link btn-sm">Submit Comment</button>
            </div>
        </div>
    </form>
    <div id="comments" class="bg-dark text-uppercase p-1">Comments ({{comments.length}})</div>
    {{#each comments}}
    <div class="row comment">
        <div class="head">
            <small><strong class="user">{{name}}</strong> {{date}}</small>
        </div>
        <p>{{summary}}</p>
    </div>
    <hr> {{/each}}
</div>
{{/each}}